NODE_ENV=development
SKIP_WEBHOOK_VALIDATION=true   # Only for development purposes
PORT=3000
BASE_URL=YOUR_BASE_URL # e.g., "https://your-app-url.com"

# Database
DB_HOST=YOUR_DB_HOST
DB_PORT=DB_PORT_NUMBER
DB_NAME=YOUR_DB_NAME
DB_USER=YOUR_DB_USER
DB_PASSWORD=YOUR_DB_PASSWORD

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=YOUR_REDIS_PASSWORD

# Kafka
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=ai-calling-agent

# Twilio
TWILIO_ACCOUNT_SID=YOUR_TWILIO_ACCOUNT_SID
TWILIO_AUTH_TOKEN=YOUR_TWILIO_AUTH_TOKEN
TWILIO_PHONE_NUMBER=YOUR_TWILIO_PHONE_NUMBER

# OpenAI
# OPENAI_API_KEY=YOUR_OPEN_API_KEY
# OPENAI_MODEL=MODEL_NAME

# Gemini
GEMINI_API_KEY=YOUR_GEMINI_API_KEY
GEMINI_MODEL=YOUR_GEMINI_MODEL_NAME

# Pinecone
PINECONE_API_KEY=YOUR_PINECONE_API_KEY
PINECONE_ENVIRONMENT=PINECONE_ENV_NAME
PINECONE_INDEX_NAME=ai-calling-agent

# AWS
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# Security
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=24h
BCRYPT_SALT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring
LOG_LEVEL=info
ENABLE_CORS=true
ENABLE_COMPRESSION=true